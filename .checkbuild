{
  "checkbuild": {
    "enable": ["jshint", "nsp", "david"],
    // "jsinspect",
    // don't exit immediately if one of the tools reports an error
    "continueOnError": true,
    // don't exit(1) even if we had some failures
    "allowFailures": false
  },
  "jshint": {
    "args": ["**/*.js", "!node_modules/**", "!**/*.test*.js"]
  },
  "jsinspect": {
    "args": ["**/*.js", "!*node_modules/**", "!**/*.test*.js", "!connectionserver.js"],
    "diff": true,
    "threshold": 70
  },
  "david": {
    "stable": true,
    "ignore": ["socket.io"]
  },
  "nsp": {}
}
